<% include ../partials/header %> 


<header class="jumbotron">
    <div class="container">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>    View our hand-picked campgrounds from all over the world </p>
            <p><a  class="btn btn-primary" href="campgrounds/new">Add new campground</a></p>
            
        </div>
    </header>


    <div class="row text-center">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-md-3" style="margin-bottom:20px;">
        <div class="card"  >
            <img  src ="<%= campground.image %>"  class="card-image-top" style="width:100%; height:240px; " >
            <div class="card-body">
                <h4 class="card-title"><%=campground.name  %></h4>
                <a  href="campgrounds/<%= campground._id %>"class="btn btn-primary">Read More</a>
            </div>
        </div>
  </div>
<% }); %>
</div>
</div>
<% include ../partials/footer %>