
<% include ../partials/header %>

        
  <div class="row forms">
 <h1 style="text-align:center">Create a new campground</h1> <br>
 <div style="margin: 0 auto; width:30%;">
<form class="campground-form"  method="POST" action="/campgrounds" >
    <div class="form-groups">
        <input  class="form-control" type="text" name="name" placeholder="name">
    </div>
    
    <div class="form-groups">
        <input  class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
        
    </div>
    <div class="form-groups">
        <input class="form-control" type="text" name="image" placeholder="image url">
    </div>
    <div class="form-groups">
             <input class="form-control" type="text" name="description" placeholder="description">
        
    </div>
    
       
    

      <button class= "btn btn-primary btn-block">Submit</button>
    
</form>
<a href="/campgrounds">back</a>
</div>
  </div>
 

</div>

